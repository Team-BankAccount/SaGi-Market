<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="107.5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/img_view_t"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintGuide_percent="0.1"
        android:orientation="horizontal"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/img_view_b"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintGuide_percent="0.88"
        android:orientation="horizontal"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/uprode_title_t"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintGuide_percent="0.13"
        android:orientation="horizontal"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/uprode_title_b"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintGuide_percent="0.28"
        android:orientation="horizontal"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/won_t"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintGuide_percent="0.39"
        android:orientation="horizontal"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/won_b"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintGuide_percent="0.51"
        android:orientation="horizontal"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/name_t"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintGuide_percent="0.74"
        android:orientation="horizontal"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/name_b"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintGuide_percent="0.858"
        android:orientation="horizontal"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/img_view_s"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintGuide_percent="0.04"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/img_view_e"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintGuide_percent="0.241"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/txt_edit_s"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintGuide_percent="0.277"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/uprode_title_e"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintGuide_percent="0.425"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/won_e"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintGuide_percent="0.362"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/name_e"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintGuide_percent="0.338"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/time_s"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintGuide_percent="0.712"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/time_e"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintGuide_percent="0.78"
        android:orientation="vertical"/>

    <ImageView
        android:id="@+id/img_post"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/img_view_s"
        app:layout_constraintTop_toTopOf="@id/img_view_t"
        app:layout_constraintBottom_toBottomOf="@id/img_view_b"
        app:layout_constraintEnd_toEndOf="@id/img_view_e"
        android:background="#d9d9d9"/>

    <TextView
        android:id="@+id/text_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/txt_edit_s"
        app:layout_constraintTop_toTopOf="@id/uprode_title_t"
        app:layout_constraintBottom_toBottomOf="@id/uprode_title_b"
        app:layout_constraintEnd_toEndOf="@id/uprode_title_e"
        android:text="게시글 제목"
        android:textSize="12.5dp"
        android:textColor="#ffffff"/>

    <TextView
        android:id="@+id/text_price"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/txt_edit_s"
        app:layout_constraintTop_toTopOf="@id/won_t"
        app:layout_constraintEnd_toEndOf="@id/won_e"
        app:layout_constraintBottom_toBottomOf="@id/won_b"
        android:text="1004원"
        android:textSize="10dp"
        android:textColor="#ffffff"/>

    <TextView
            android:id="@+id/text_user"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintStart_toStartOf="@id/txt_edit_s"
    app:layout_constraintTop_toTopOf="@id/name_t"
    app:layout_constraintBottom_toBottomOf="@id/name_b"
    app:layout_constraintEnd_toEndOf="@id/name_e"
    android:text="송정윤"
    android:textSize="9dp"
    android:textColor="#ffffff"/>

    <TextView
        android:id="@+id/text_time"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/time_s"
        app:layout_constraintTop_toTopOf="@id/name_t"
        app:layout_constraintBottom_toBottomOf="@id/name_b"
        app:layout_constraintEnd_toEndOf="@id/time_e"
        android:text="10분전"
        android:textSize="9dp"
        android:textColor="#ffffff"/>

</androidx.constraintlayout.widget.ConstraintLayout>