<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/rogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/sg" />

    <TextView
        android:id="@+id/find_password"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_below="@id/rogo"
        android:text="비밀번호 찾기"
        android:textColor="#000000"
        android:textSize="32sp"
        android:layout_centerHorizontal="true"
        android:gravity="center"/>

    <TextView
        android:id="@+id/ment1"
        android:layout_width="350dp"
        android:layout_height="20dp"
        android:layout_below="@id/find_password"
        android:layout_marginTop="30dp"
        android:text="등록된 이메일 주소를 입력해주세요."
        android:textColor="#000000"
        android:layout_marginStart="30dp" />

    <TextView
        android:id="@+id/ment2"
        android:layout_width="350dp"
        android:layout_height="20dp"
        android:layout_below="@id/ment1"
        android:text="본인확인을 위한 인증번호가 계정의 이메일주소로 발송됩니다."
        android:textColor="#000000"
        android:layout_marginStart="30dp"/>

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/ment2"
        android:layout_centerHorizontal="true"
        android:hint="이메일"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/email_send"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/edit_email"
        android:layout_centerHorizontal="true"
        android:background="#002b5b"
        android:text="메일 발송"
        android:textColor="#ffffff"
        android:textSize="24sp"/>

    <LinearLayout
        android:id="@+id/LL"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/email_send"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/send_num"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:hint="발송된 인증번호 작성"
            android:layout_marginStart="30dp"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="#000000"
            android:text="확인"
            android:textColor="#ffffff"
            android:textSize="20sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/number"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@id/LL"
        android:text="인증번호 확인됨"
        android:gravity="center"
        android:layout_marginStart="30dp"/>

    <EditText
        android:id="@+id/new_password"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/number"
        android:layout_centerHorizontal="true"
        android:text="새 비밀번호 입력" />

    <EditText
        android:id="@+id/new_password_check"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/new_password"
        android:layout_centerHorizontal="true"
        android:text="새 비밀번호 확인"/>
    
    <TextView
        android:id="@+id/go_login"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@id/new_password_check"
        android:layout_centerHorizontal="true"
        android:text="로그인하기"
        android:textColor="#002b5b"
        android:gravity="center" />

</RelativeLayout>