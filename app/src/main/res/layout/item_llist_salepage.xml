<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="106dp">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/img_view_t"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            app:layout_constraintGuide_percent="0.09"
            android:orientation="horizontal" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/img_view_b"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            app:layout_constraintGuide_percent="0.88"
            android:orientation="horizontal" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/img_view_s"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            app:layout_constraintGuide_percent="0.055"
            android:orientation="vertical" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/img_view_e"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            app:layout_constraintGuide_percent="0.287"
            android:orientation="vertical" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/title_t"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            app:layout_constraintGuide_percent="0.14"
            android:orientation="horizontal" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/title_b"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            app:layout_constraintGuide_percent="0.3"
            android:orientation="horizontal" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/texts_s"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            app:layout_constraintGuide_percent="0.325"
            android:orientation="vertical" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/title_e"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            app:layout_constraintGuide_percent="0.495"
            android:orientation="vertical" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/price_t"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            app:layout_constraintGuide_percent="0.41"
            android:orientation="horizontal" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/price_b"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            app:layout_constraintGuide_percent="0.54"
            android:orientation="horizontal" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/price_e"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            app:layout_constraintGuide_percent="0.421"
            android:orientation="vertical" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/name_t"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            app:layout_constraintGuide_percent="0.76"
            android:orientation="horizontal" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/name_e"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            app:layout_constraintGuide_percent="0.395"
            android:orientation="vertical" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/spinner_t"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            app:layout_constraintGuide_percent="0.63"
            android:orientation="horizontal" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/spinner_b"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            app:layout_constraintGuide_percent="0.915"
            android:orientation="horizontal" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/spinner_s"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            app:layout_constraintGuide_percent="0.695"
            android:orientation="vertical" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/spinner_e"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            app:layout_constraintGuide_percent="0.97"
            android:orientation="vertical" />

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@id/img_view_s"
            app:layout_constraintTop_toTopOf="@id/img_view_t"
            app:layout_constraintEnd_toEndOf="@id/img_view_e"
            app:layout_constraintBottom_toBottomOf="@id/img_view_b"
            android:background="#d9d9d9" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@id/texts_s"
            app:layout_constraintTop_toTopOf="@id/title_t"
            app:layout_constraintBottom_toBottomOf="@id/title_b"
            app:layout_constraintEnd_toEndOf="@id/title_e" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@id/texts_s"
            app:layout_constraintTop_toTopOf="@id/price_t"
            app:layout_constraintBottom_toBottomOf="@id/price_b"
            app:layout_constraintEnd_toEndOf="@id/price_e" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@id/texts_s"
            app:layout_constraintTop_toTopOf="@id/name_t"
            app:layout_constraintEnd_toEndOf="@id/name_e"
            app:layout_constraintBottom_toBottomOf="@id/img_view_b" />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:spinnerMode="dropdown"
            app:layout_constraintStart_toStartOf="@id/spinner_s"
            app:layout_constraintTop_toTopOf="@id/spinner_t"
            app:layout_constraintBottom_toBottomOf="@id/spinner_b"
            app:layout_constraintEnd_toEndOf="@id/spinner_e"
            android:background="@drawable/spinner_background" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>