<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/rogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/sg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"/>
    
    <EditText
        android:id="@+id/edit_name"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@id/rogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:hint="이름"/>

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@id/edit_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:hint="이메일"/>

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@id/edit_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:hint="비밀번호"/>

    <EditText
        android:id="@+id/edit_password_ch"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@id/edit_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:hint="비밀번호 확인"/>

    <Button
        android:id="@+id/btn_join"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:background="@drawable/round_button"
        android:layout_below="@id/edit_password_ch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="가입하기"
        android:textColor="#ffffff"
        android:textSize="24sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/btn_join"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:text="회원가입이 되어있으신가요?"
            android:textSize="14sp"
            android:layout_marginStart="90dp"/>

        <TextView
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="로그인하기"
            android:textColor="#002b5b"/>

    </LinearLayout>

</RelativeLayout>